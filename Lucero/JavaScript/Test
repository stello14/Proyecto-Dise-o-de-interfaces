<!DOCTYPE html>
<html>
<head>
  <title>Transición Suave entre Páginas</title>
  <style>
    /* Estilos de transición */
    body {
      overflow: hidden; /* Evita el scroll durante la transición */
    }
    .page {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      transition: transform 0.5s ease-in-out;
    }
    .current-page {
      z-index: 2;
      transform: translateX(0);
    }
    .next-page {
      z-index: 1;
      transform: translateX(100%);
    }
  </style>
</head>
<body>
  <div class="page current-page" id="page1">
    <h1>Página 1</h1>
    <button onclick="changePage()">Ir a la Página 2</button>
  </div>
  <div class="page next-page" id="page2" style="display: none;">
    <h1>Página 2</h1>
    <button onclick="goBack()">Volver a la Página 1</button>
  </div>

  <script>
    function changePage() {
      const currentPage = document.getElementById('page1');
      const nextPage = document.getElementById('page2');

      currentPage.classList.remove('current-page');
      currentPage.classList.add('next-page');
      nextPage.classList.remove('next-page');
      nextPage.classList.add('current-page');
      nextPage.style.display = 'block';

      setTimeout(() => {
        currentPage.style.display = 'none';
      }, 500);
    }

    function goBack() {
      const currentPage = document.getElementById('page1');
      const nextPage = document.getElementById('page2');

      currentPage.classList.remove('next-page');
      currentPage.classList.add('current-page');
      nextPage.classList.remove('current-page');
      nextPage.classList.add('next-page');
      nextPage.style.display = 'block';

      setTimeout(() => {
        nextPage.style.display = 'none';
      }, 500);
    }
  </script>
</body>
</html>
